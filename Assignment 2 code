#Q6
a=int(input())
b=int(input())
c=a^b
d=str(bin(c))
occurence=0
start=0
for i in range(len(d)):
        j=d.find("1", start)
        start=j+1
        occurence += 1
print(bin(a))
print(bin(b))
print(occurence , "bits need to be flipped")
